/* Définition de la typographie générale */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    background-color: white;
}

section.part2 {
    font-family: Arial, sans-serif;
    margin-left: 400px;
	margin-right: 400px;
    padding: 0;
    color: #333;
    background-color: white;
}

section.part2 p {
	    text-align: justify;
}

section.part2 h2 {
    color: #003366; /* Bleu Air France */
    font-size: 24px;
	margin-top: 40px;
    margin-bottom: 10px;
}

/* Style du header avec le logo et le menu de navigation */
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2px;
	padding-bottom: 2px;
	padding-left: 2px;
	padding-right: 20px;
    background-color: #003366; /* Bleu Air France */
}

header .logo img {
    width: 300px;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-left: 20px;
}

nav ul li a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    font-size: 18px;
}

nav ul li a:hover {
    text-decoration: underline;
}

/* Section principale (Hero) avec une grande image en arrière-plan */
.hero {
    background-image: url('images/hero.webp'); /* Ajouter une image qui ressemble à celle du site Air France */
    background-size: cover;
    background-position: 50% 50%;
	color: white;
    text-align: center;
    padding: 100px 20px;
}

.hero h1 {
    font-size: 48px;
    margin-bottom: 20px;
	color: #002157;
	-webkit-text-stroke: 1px #FFFFFF;
}

.hero p {
    font-size: 24px;
}

/* Présentation du contenu (sections) */
section.presentation {
    padding: 40px 20px;
    text-align: center;
    background-color: #f1f1f1;
}

section.presentation h2 {
    color: #003366; /* Bleu Air France */
    font-size: 36px;
    margin-bottom: 20px;
}

section.presentation p {
    font-size: 18px;
    line-height: 1.6;
    color: #666;
}

/* Pied de page */
footer {
    background-color: #003366;
    color: white;
    text-align: center;
    position: relative;
    bottom: 0;
    width: 100%;
	margin-top: 100px;

}

footer p {
    margin: 0;
}


/* Styles de base pour le tableau */
table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

/* Styles pour les cellules de l'en-tête */
th {
    background-color: #f2f2f2;
    color: #333;
    padding: 12px;
    border: 1px solid #333;
    text-align: left;
    font-weight: bold;
}

/* Styles pour les cellules de données */
td {
    padding: 10px;
    border: 1px solid #333;
    text-align: left;
}

/* Style pour les lignes paires (zébrage) */
tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* Style pour les lignes impaires */
tr:nth-child(odd) {
    background-color: #fff;
}


section.contact {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
	padding-top: 100px;	
}

.contact-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Espace entre les cartes */
}

.card {
    background-color: white;
    border: 2px solid #002157; /* Bleu Air France */
    border-radius: 10px;
    padding: 20px;
    margin: 15px;
    width: 500px; /* Largeur des cartes */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    text-align: center; /* Centre le texte */
    transition: transform 0.3s; /* Effet de transition */
}

.card:hover {
    transform: translateY(-5px); /* Légère élévation au survol */
}

.name {
    color: #002157.; /* Rouge Air France */
    margin: 0; /* Retire la marge par défaut */
    font-size: 1.5em; /* Taille de la police pour le nom */
}

.email {
    color: #002157.; /* Couleur du texte pour l'email */
    margin: 5px 0 0 0; /* Marge pour l'email */
}
