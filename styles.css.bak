/* Définition de la typographie générale */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    background-color: #f9f9f9;
}

/* Style du header avec le logo et le menu de navigation */
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #003366; /* Bleu Air France */
}

header .logo img {
    width: 150px;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-left: 20px;
}

nav ul li a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    font-size: 18px;
}

nav ul li a:hover {
    text-decoration: underline;
}

/* Section principale (Hero) avec une grande image en arrière-plan */
.hero {
    background-image: url('images/hero.jpg'); /* Ajouter une image qui ressemble à celle du site Air France */
    background-size: cover;
    background-position: 50% center;
	color: white;
    text-align: center;
    padding: 100px 20px;
}

.hero h1 {
    font-size: 48px;
    margin-bottom: 20px;
}

.hero p {
    font-size: 24px;
}

/* Présentation du contenu (sections) */
section.presentation {
    padding: 40px 20px;
    text-align: center;
    background-color: #f1f1f1;
}

section.presentation h2 {
    color: #003366; /* Bleu Air France */
    font-size: 36px;
    margin-bottom: 20px;
}

section.presentation p {
    font-size: 18px;
    line-height: 1.6;
    color: #666;
}

/* Pied de page */
footer {
    background-color: #003366;
    color: white;
    text-align: center;
    padding: 20px;
    position: relative;
    bottom: 0;
    width: 100%;
}

footer p {
    margin: 0;
}
